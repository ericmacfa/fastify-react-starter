{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "globals": {
        "BASE_URL": true,
        "APP_URL": true
    },
    "env": {
        "node": true,
        "es6": true,
        "browser": true,
        "mocha": true,
        "jest": true
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "extends": [
        "standard",
        "react-app"
    ],
    "settings": {
        "react": {
            "version": "16.12.0"
        }
    },
    "rules": {
        "camelcase": 0,
        "comma-dangle": [
            "error",
            "only-multiline"
        ],
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-console": "off",
        "no-extra-semi": "warn",
        "no-return-assign": "off",
        "semi": [
            "error",
            "always"
        ],
        "semi-spacing": [
            "warn",
            {
                "before": false,
                "after": false
            }
        ],
        "node/no-deprecated-api": [
            "error",
            {}
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never"
            }
        ],
        "react/display-name": "off",
        "react/no-find-dom-node": "off",
        "react/no-string-refs": "off",
        "react/no-deprecated": "off",
        "react/prop-types": "off",
        "react-hooks/rules-of-hooks": "error"
    }
}